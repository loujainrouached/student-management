pipeline {
    agent any

    tools {
        maven 'MAVEN'
    }

    environment {
        NAMESPACE = 'devops'
    }

    stages {

        stage('Checkout') {
            steps {
                echo 'ğŸ“¥ Checkout source code'
                checkout scm
            }
        }

        stage('Build with Maven') {
            steps {
                echo 'ğŸ”¨ Maven build'
                dir('student-management') {
                    sh 'mvn clean package -DskipTests'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                echo 'ğŸ” SonarQube analysis'
                dir('student-management') {
                    withSonarQubeEnv('Sonarqube') {
                        sh 'mvn sonar:sonar || true'
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                echo 'ğŸ³ Build Docker image'
                dir('student-management') {
                    sh 'docker build -t student-management-app:1.0 .'
                }
            }
        }
stage('KUBERNETES DEPLOY') {
    steps {
        echo 'â˜¸ï¸ Deploy to Kubernetes'
        sh '''
            ls -l
            ls -l student-management
            ls -l student-management/k8s

            kubectl apply -f student-management/k8s
            kubectl get pods -n devops
            kubectl get svc -n devops
        '''
    }
}

stage('API Test - Create Student') {
    steps {
        script {
            echo 'ğŸ§ª Test REST API - Create Student'
            sh '''
                echo "â³ Waiting for pod to be ready..."
                
                # Attendre que le nouveau pod soit Ready (max 5 minutes)
                kubectl wait --for=condition=ready pod \
                    -l app=studentmang-app \
                    -n devops \
                    --timeout=300s
                
                echo "âœ… Pod is ready, waiting for application startup..."
                sleep 30
                
                echo "ğŸ¥ Health check..."
                for i in {1..10}; do
                    if curl -f http://192.168.49.2:32639/student/actuator/health 2>/dev/null; then
                        echo "âœ… Application is healthy!"
                        break
                    fi
                    echo "Attempt $i/10 failed, retrying in 5s..."
                    sleep 5
                done
                
                echo ""
                echo "ğŸ“ Creating student..."
                curl -v -X POST http://192.168.49.2:32639/student/students/createStudent \
                  -H "Content-Type: application/json" \
                  -d '{"firstName":"Ahmed","lastName":"Mejri","email":"ahmed.mejri@esprit.tn"}'
                
                echo ""
                echo "âœ… API Test completed"
            '''
        }
    }
}
  
}
    }

    post {
