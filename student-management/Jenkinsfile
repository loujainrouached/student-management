pipeline {
    agent any

    tools {
        maven 'MAVEN'
    }

    environment {
        NAMESPACE = 'devops'
    }

    stages {

        stage('Checkout') {
            steps {
                echo 'üì• Checkout source code'
                checkout scm
            }
        }

        stage('Build with Maven') {
            steps {
                echo 'üî® Maven build'
                dir('student-management') {
                    sh 'mvn clean package -DskipTests'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                echo 'üîç SonarQube analysis'
                dir('student-management') {
                    withSonarQubeEnv('Sonarqube') {
                        sh 'mvn sonar:sonar || true'
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                echo 'üê≥ Build Docker image'
                dir('student-management') {
                    sh 'docker build -t student-management-app:1.0 .'
                }
            }
        }
stage('KUBERNETES DEPLOY') {
    steps {
        echo '‚ò∏Ô∏è Deploy to Kubernetes'
        sh '''
            ls -l
            ls -l student-management
            ls -l student-management/k8s

            kubectl apply -f student-management/k8s
            kubectl get pods -n devops
            kubectl get svc -n devops
        '''
    }
}

  stage('CREATE DEPARTMENT') {
            steps {
                script {
                    echo "Creating a Department via REST API..."

                    def nodePort = sh(
                        script: "${KUBECTL} get svc spring-service -n devops -o jsonpath='{.spec.ports[0].nodePort}'",
                        returnStdout: true
                    ).trim()
                    echo "NodePort detected: ${nodePort}"

                    def response = sh(
                        script: """curl -s -o /dev/null -w '%{http_code}' \
                            -X POST http://192.168.49.2:${nodePort}/student/department/createDepartment \
                            -H 'Content-Type: application/json' \
                            -d '{\"name\": \"Finance\", \"location\": \"Sfax\"}'""",
                        returnStdout: true
                    ).trim()

                    echo "Response code: ${response}"
                    if (response != '200' && response != '201') {
                        error "Department creation failed with HTTP code ${response}"
                    }
                }
            }
        }

        stage('GET ALL DEPARTMENTS') {
            steps {
                script {
                    echo "Fetching all departments..."
                    sh "curl -s http://192.168.49.2:${nodePort}/student/department/getAllDepartment"
                }
            }
        }
    }

    post {
        success {
            echo '‚úÖ PIPELINE TERMIN√â AVEC SUCC√àS üéâ'
        }
        failure {
            echo '‚ùå PIPELINE √âCHOU√â'
        }
    }

