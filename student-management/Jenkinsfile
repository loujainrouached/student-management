pipeline {
    agent any

    tools {
        maven 'MAVEN'
    }

    environment {
        NAMESPACE = 'devops'
        KUBECTL = '/usr/local/bin/kubectl' // <-- ajouter chemin kubectl
    }

    stages {

        stage('Checkout') {
            steps {
                echo 'ðŸ“¥ Checkout source code'
                checkout scm
            }
        }

        stage('Build with Maven') {
            steps {
                echo 'ðŸ”¨ Maven build'
                dir('student-management') {
                    sh 'mvn clean package -DskipTests'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                echo 'ðŸ” SonarQube analysis'
                dir('student-management') {
                    withSonarQubeEnv('Sonarqube') {
                        sh 'mvn sonar:sonar || true'
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                echo 'ðŸ³ Build Docker image'
                dir('student-management') {
                    sh 'docker build -t student-management-app:1.0 .'
                }
            }
        }

        stage('Kubernetes Deploy') {
            steps {
                echo 'â˜¸ï¸ Deploy to Kubernetes'
                sh '''
                    ls -l
                    ls -l student-management
                    ls -l student-management/k8s

                    ${KUBECTL} apply -f student-management/k8s
                    ${KUBECTL} get pods -n ${NAMESPACE}
                    ${KUBECTL} get svc -n ${NAMESPACE}
                '''
            }
        }

stage('Wait for Spring Boot') {
    steps {
        echo "â³ Waiting for Spring Boot app to be ready..."
        script {
            // RÃ©cupÃ©rer l'IP de Minikube
            SERVICE_IP = sh(script: "minikube ip", returnStdout: true).trim()
            // RÃ©cupÃ©rer le NodePort du service Spring
            NODE_PORT = sh(script: "kubectl get svc spring-service -n devops -o jsonpath='{.spec.ports[0].nodePort}'", returnStdout: true).trim()
            // URL health endpoint
            SERVICE_URL = "http://${SERVICE_IP}:${NODE_PORT}/student/actuator/health"
            
            // Boucle jusqu'Ã  ce que le service soit UP
            sh """
            echo "Waiting for service at $SERVICE_URL..."
            until curl -s $SERVICE_URL | grep -q '\\\"status\\\":\\\"UP\\\"'; do
                echo "Service not ready yet..."
                sleep 5
            done
            echo "âœ… Service is UP!"
            """
        }
    }
}

stage('Create Department') {
    steps {
        echo "ðŸ“ Creating a Department via REST API..."
        sh '''
        SERVICE_IP=$(minikube ip)
        NODE_PORT=$(kubectl get svc spring-service -n devops -o jsonpath='{.spec.ports[0].nodePort}')
        curl -X POST "http://${SERVICE_IP}:${NODE_PORT}/student/department/createDepartment" \
             -H "Content-Type: application/json" \
             -d '{"name": "Finance", "location": "Sfax"}'
        '''
    }
}

    }


    post {
        success {
            echo 'âœ… PIPELINE TERMINÃ‰ AVEC SUCCÃˆS ðŸŽ‰'
        }
        failure {
            echo 'âŒ PIPELINE Ã‰CHOUÃ‰'
        }
    }

} // <-- fin pipeline
