pipeline {
    agent any

    tools {
        maven 'MAVEN'
    }

    environment {
        NAMESPACE = 'devops'
        KUBECTL = '/usr/local/bin/kubectl' // <-- ajouter chemin kubectl
    }

    stages {

        stage('Checkout') {
            steps {
                echo 'ðŸ“¥ Checkout source code'
                checkout scm
            }
        }

        stage('Build with Maven') {
            steps {
                echo 'ðŸ”¨ Maven build'
                dir('student-management') {
                    sh 'mvn clean package -DskipTests'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                echo 'ðŸ” SonarQube analysis'
                dir('student-management') {
                    withSonarQubeEnv('Sonarqube') {
                        sh 'mvn sonar:sonar || true'
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                echo 'ðŸ³ Build Docker image'
                dir('student-management') {
                    sh 'docker build -t student-management-app:1.0 .'
                }
            }
        }

        stage('Kubernetes Deploy') {
            steps {
                echo 'â˜¸ï¸ Deploy to Kubernetes'
                sh '''
                    ls -l
                    ls -l student-management
                    ls -l student-management/k8s

                    ${KUBECTL} apply -f student-management/k8s
                    ${KUBECTL} get pods -n ${NAMESPACE}
                    ${KUBECTL} get svc -n ${NAMESPACE}
                '''
            }
        }

        stage('Create Department') {
            steps {
                script {
                    echo "Creating a Department via REST API..."
                    def nodePort = sh(
                        script: "${KUBECTL} get svc spring-service -n ${NAMESPACE} -o jsonpath='{.spec.ports[0].nodePort}'",
                        returnStdout: true
                    ).trim()
                    echo "NodePort detected: ${nodePort}"

                    def response = sh(
                        script: """curl -s -o /dev/null -w '%{http_code}' \
                            -X POST http://192.168.49.2:${nodePort}/student/department/createDepartment \
                            -H 'Content-Type: application/json' \
                            -d '{\"name\": \"Finance\", \"location\": \"Sfax\"}'""",
                        returnStdout: true
                    ).trim()

                    echo "Response code: ${response}"
                    if (response != '200' && response != '201') {
                        error "Department creation failed with HTTP code ${response}"
                    }

                    // Stocker nodePort pour le stage suivant
                    env.NODE_PORT = nodePort
                }
            }
        }

        stage('Get All Departments') {
            steps {
                script {
                    echo "Fetching all departments..."
                    sh "curl -s http://192.168.49.2:${env.NODE_PORT}/student/department/getAllDepartment"
                }
            }
        }

    }

    post {
        success {
            echo 'âœ… PIPELINE TERMINÃ‰ AVEC SUCCÃˆS ðŸŽ‰'
        }
        failure {
            echo 'âŒ PIPELINE Ã‰CHOUÃ‰'
        }
    }

} // <-- fin pipeline
