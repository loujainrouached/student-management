pipeline {
    agent any

    tools {
        maven 'MAVEN'
    }

    environment {
        NAMESPACE = 'devops'
    }

    stages {

        stage('Checkout') {
            steps {
                echo 'ğŸ“¥ Checkout source code'
                checkout scm
            }
        }

        stage('Build with Maven') {
            steps {
                echo 'ğŸ”¨ Maven build'
                dir('student-management') {
                    sh 'mvn clean package -DskipTests'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                echo 'ğŸ” SonarQube analysis'
                dir('student-management') {
                    withSonarQubeEnv('Sonarqube') {
                        sh 'mvn sonar:sonar || true'
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                echo 'ğŸ³ Build Docker image'
                dir('student-management') {
                    sh 'docker build -t student-management-app:1.0 .'
                }
            }
        }
stage('KUBERNETES DEPLOY') {
    steps {
        echo 'â˜¸ï¸ Deploy to Kubernetes'
        sh '''
            ls -l
            ls -l student-management
            ls -l student-management/k8s

            kubectl apply -f student-management/k8s
            kubectl get pods -n devops
            kubectl get svc -n devops
        '''
    }
}


   stage('API Test - Create Student') {
    steps {
        script {
            echo 'ğŸ§ª Test REST API - Create Student'
            sh '''
                echo "â³ Waiting for application to be ready..."
                sleep 45
                
                echo "ğŸ¥ Health check..."
                curl -f http://192.168.49.2:32639/student/actuator/health || echo "Health check failed but continuing..."
                
                echo "ğŸ“ Creating student..."
                curl -v -X POST http://192.168.49.2:32639/student/students/createStudent \
                  -H "Content-Type: application/json" \
                  -d '{"firstName":"Ahmed","lastName":"Mejri","email":"ahmed.mejri@esprit.tn"}'
                
                echo ""
                echo "âœ… API Test completed"
            '''
        }
    }
}
    }

    post {
        success {
            echo 'âœ… PIPELINE TERMINÃ‰ AVEC SUCCÃˆS ğŸ‰'
        }
