pipeline {
    agent any

    tools {
        maven 'MAVEN'
    }

    environment {
        NAMESPACE = 'devops'
    }

    stages {

        stage('Checkout') {
            steps {
                echo 'ğŸ“¥ Checkout source code'
                checkout scm
            }
        }

        stage('Build with Maven') {
            steps {
                echo 'ğŸ”¨ Maven build'
                dir('student-management') {
                    sh 'mvn clean package -DskipTests'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                echo 'ğŸ” SonarQube analysis'
                dir('student-management') {
                    withSonarQubeEnv('Sonarqube') {
                        sh 'mvn sonar:sonar || true'
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                echo 'ğŸ³ Build Docker image'
                dir('student-management') {
                    sh 'docker build -t student-management-app:1.0 .'
                }
            }
        }

        stage('KUBERNETES DEPLOY') {
            steps {
                echo 'â˜¸ï¸ Deploy to Kubernetes'
                sh '''
                    kubectl apply -f k8s/
                    kubectl get pods -n devops
                    kubectl get svc -n devops
                '''
            }
        }

        stage('CREATE DEPARTMENT (API REST)') {
            steps {
                echo 'ğŸ“¡ Call REST API'
                sleep 20
                sh '''
                    curl -X POST http://192.168.49.2:32639/department/createDepartment \
                    -H "Content-Type: application/json" \
                    -d '{"name":"Finance","location":"Sfax"}'
                '''
            }
        }
    }

    post {
        success {
            echo 'âœ… PIPELINE TERMINÃ‰ AVEC SUCCÃˆS ğŸ‰'
        }
        failure {
            echo 'âŒ PIPELINE Ã‰CHOUÃ‰'
        }
    }
}
