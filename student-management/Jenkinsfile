pipeline {
    agent any
    
    environment {
        // Docker Configuration
        DOCKER_IMAGE = 'loujainrouached/student-app'
        DOCKER_TAG = "${BUILD_NUMBER}"
        
        // Kubernetes Configuration
        NAMESPACE = 'devops'
        
        // Git Configuration
        GIT_REPO = 'https://github.com/loujainrouached/student-management.git'
        
        // SonarQube Configuration
        SONAR_HOST = 'http://10.0.2.15:9000'
        SONAR_PROJECT_KEY = 'student-management'
        SONAR_PROJECT_NAME = 'Student Management'
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo 'üì• Cloning repository...'
                git branch: 'main', url: "${GIT_REPO}"
            }
        }
        
        stage('Build with Maven') {
            steps {
                echo 'üî® Building application with Maven...'
                dir('student-management') {
                    sh 'mvn clean package -DskipTests'
                }
            }
        }
        
        stage('SonarQube Analysis') {
            steps {
                echo 'üîç Running SonarQube code quality analysis...'
                dir('student-management') {
                    withCredentials([string(credentialsId: 'sonarqube-token', variable: 'SONAR_TOKEN')]) {
                        sh """
                            mvn sonar:sonar \
                                -Dsonar.host.url=${SONAR_HOST} \
                                -Dsonar.login=\${SONAR_TOKEN} \
                                -Dsonar.projectKey=${SONAR_PROJECT_KEY} \
                                -Dsonar.projectName='${SONAR_PROJECT_NAME}' \
                                -Dsonar.java.binaries=target/classes
                        """
                    }
                }
                echo "‚úÖ SonarQube analysis completed. View report at: ${SONAR_HOST}"
            }
        }
        
        stage('Build Docker Image') {
            steps {
                echo 'üê≥ Building Docker image...'
                script {
                    dir('student-management') {
                        sh "docker build -t ${DOCKER_IMAGE}:${DOCKER_TAG} ."
                        sh "docker tag ${DOCKER_IMAGE}:${DOCKER_TAG} ${DOCKER_IMAGE}:latest"
                    }
                }
            }
        }
        
        stage('Push Docker Image') {
            steps {
                echo 'üì§ Pushing Docker image to Docker Hub...'
                script {
                    withCredentials([usernamePassword(credentialsId: 'dockerhub-credentials', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                        sh 'echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin'
                        sh "docker push ${DOCKER_IMAGE}:${DOCKER_TAG}"
                        sh "docker push ${DOCKER_IMAGE}:latest"
                    }
                }
            }
        }
        
        stage('Deploy to Kubernetes') {
            steps {
                echo '‚ò∏Ô∏è Deploying to Kubernetes...'
                sh """
                    kubectl set image deployment/studentmang-app studentmang-app=${DOCKER_IMAGE}:${DOCKER_TAG} -n ${NAMESPACE}
                    kubectl rollout status deployment/studentmang-app -n ${NAMESPACE} --timeout=10m
                """
            }
        }
        
        stage('Verify Deployment') {
            steps {
                echo '‚úÖ Verifying deployment...'
                sh """
                    echo "======================================"
                    echo "         DEPLOYMENT STATUS"
                    echo "======================================"
                    echo ""
                    echo "üì¶ Pods in namespace ${NAMESPACE}:"
                    kubectl get pods -n ${NAMESPACE}
                    echo ""
                    echo "üåê Services in namespace ${NAMESPACE}:"
                    kubectl get svc -n ${NAMESPACE}
                    echo ""
                    echo "======================================"
                """
            }
        }
    }
    
    post {
        success {
            echo '‚úÖ ========================================='
            echo '‚úÖ  PIPELINE EXECUTED SUCCESSFULLY! üéâ'
            echo '‚úÖ ========================================='
            echo "üìä SonarQube Report: ${SONAR_HOST}"
            echo "üê≥ Docker Image: ${DOCKER_IMAGE}:${DOCKER_TAG}"
            echo "‚ò∏Ô∏è  Kubernetes Namespace: ${NAMESPACE}"
            echo '‚úÖ ========================================='
        }
        failure {
            echo '‚ùå ========================================='
            echo '‚ùå  PIPELINE FAILED! üí•'
            echo '‚ùå ========================================='
            echo 'Please check the logs above for errors.'
        }
        always {
            echo 'üßπ Cleaning up Docker images...'
            sh """
                docker rmi ${DOCKER_IMAGE}:${DOCKER_TAG} || true
                docker image prune -f || true
            """
        }
    }
}
