pipeline {
    agent any

    tools {
    maven 'MAVEN'
    }

    environment {
        // Docker Configuration
        DOCKER_IMAGE = 'loujainrouached/student-app'
        DOCKER_TAG   = "${BUILD_NUMBER}"

        // Kubernetes Configuration
        NAMESPACE = 'devops'

        // Git Configuration
        GIT_REPO = 'https://github.com/loujainrouached/student-management.git'
    }

    stages {

        stage('Checkout') {
            steps {
                echo 'üì• Cloning repository...'
                git branch: 'main', url: "${GIT_REPO}"
            }
        }

        stage('Build with Maven') {
            steps {
                echo 'üî® Building application with Maven...'
                dir('student-management') {
                    sh 'mvn clean package -DskipTests'
                }
            }
        }

        stage('SONARQUBE ANALYSIS') {
            steps {
                echo 'üîç SonarQube analysis...'
                dir('student-management') {
                    withSonarQubeEnv('Sonarqube') {
                        sh 'mvn sonar:sonar || true'
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                echo 'üê≥ Building Docker image...'
                dir('student-management') {
                    sh """
                        docker build -t ${DOCKER_IMAGE}:${DOCKER_TAG} .
                        docker tag ${DOCKER_IMAGE}:${DOCKER_TAG} ${DOCKER_IMAGE}:latest
                    """
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                echo 'üì§ Pushing Docker image to Docker Hub...'
                withCredentials([usernamePassword(
                    credentialsId: 'dockerhub-credentials',
                    usernameVariable: 'DOCKER_USER',
                    passwordVariable: 'DOCKER_PASS'
                )]) {
                    sh '''
                        echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin
                        docker push ${DOCKER_IMAGE}:${DOCKER_TAG}
                        docker push ${DOCKER_IMAGE}:latest
                    '''
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                echo '‚ò∏Ô∏è Deploying to Kubernetes...'
                sh """
                    kubectl set image deployment/studentmang-app \
                    studentmang-app=${DOCKER_IMAGE}:${DOCKER_TAG} \
                    -n ${NAMESPACE}

                    kubectl rollout status deployment/studentmang-app \
                    -n ${NAMESPACE} --timeout=10m
                """
            }
        }

        stage('Verify Deployment') {
            steps {
                echo '‚úÖ Verifying deployment...'
                sh """
                    echo "======================================"
                    echo "         DEPLOYMENT STATUS"
                    echo "======================================"
                    kubectl get pods -n ${NAMESPACE}
                    kubectl get svc -n ${NAMESPACE}
                    echo "======================================"
                """
            }
        }
    }

    post {
        success {
            echo '‚úÖ ========================================='
            echo '‚úÖ  PIPELINE EXECUTED SUCCESSFULLY! üéâ'
            echo '‚úÖ ========================================='
            echo "üê≥ Docker Image: ${DOCKER_IMAGE}:${DOCKER_TAG}"
            echo "‚ò∏Ô∏è  Kubernetes Namespace: ${NAMESPACE}"
            echo '‚úÖ ========================================='
        }
        failure {
            echo '‚ùå ========================================='
            echo '‚ùå  PIPELINE FAILED! üí•'
            echo '‚ùå ========================================='
            echo 'Please check the logs above for errors.'
        }
        always {
            echo 'üßπ Cleaning up Docker images...'
            sh '''
                docker image prune -f || true
            '''
        }
    }
}
